        <Image VerticalAlignment="Center" HorizontalAlignment="Center" Source="/bun.png" Width="800" Height="629" Margin="0,466,0,0" Opacity="0.9"/>
        <TextBlock x:Name="GameTextBlockUnderBun" TextWrapping="Wrap" Text="tap on this bun" FontSize="45" FontFamily="Candara" Margin="605,902,586,21" Foreground="#FDE3C7A5" FontStyle="Italic" VerticalAlignment="Center" HorizontalAlignment="Center" Opacity=".5" FontWeight="Bold"/>
